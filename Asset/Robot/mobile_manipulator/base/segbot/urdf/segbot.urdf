<?xml version="1.0"?>

<robot name="segbot" xmlns:xacro="http://www.ros.org/wiki/xacro">

  <material name="White">
    <color rgba="1.0 1.0 1.0 1.0"/>
  </material>

  <!-- root link, on the ground just below the robot origin -->
  <link name="base_footprint">
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0" />
      <geometry>
        <box size="0.001 0.001 0.001" />
      </geometry>
      <material name="White"/>
    </visual>
    <collision>
      <origin xyz="0 0 0" rpy="0 0 0" />
      <geometry>
        <box size="0.001 0.001 0.001" />
      </geometry>
    </collision>
  </link>

  <joint name="base_footprint_joint" type="fixed">
    <origin xyz="0.0 0 0.2165" rpy="0 0 0" />
    <parent link="base_footprint" />
    <child link="base_link" />
  </joint>

  <!-- This is the robot origin, center of the 2 wheels (axis of rotation) -->
  <link name="base_link">
    <inertial>
      <mass value="20" />
      <origin xyz="0 0 0" />
      <inertia ixx="0.1" ixy="0.0" ixz="0.0"
        iyy="0.1" iyz="0.0"
        izz="0.1" />
    </inertial>
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0" />
      <geometry>
        <mesh filename="../meshes/rmp50-base-link.obj" scale="0.0254 0.0254 0.0254" />
      </geometry>
      <material name="White"/>
    </visual>
    <collision>
      <origin xyz="0 0 0" rpy="0 0 0" />
      <geometry>
        <mesh filename="../meshes/rmp50-base-link.obj" scale="0.0254 0.0254 0.0254" />
      </geometry>
    </collision>
  </link>

  Fixed joint between base_link and cylinder_link
  <joint name="base_link_to_cylinder_joint" type="fixed">
    <origin xyz="0 0 0" rpy="0 0 0" />
    <parent link="base_link" />
    <child link="cylinder_link" />
  </joint>

  <!-- cylinder -->
  <link name="cylinder_link">
    <visual>
      <origin xyz="0 0 0.4" rpy="0 0 0" />
      <geometry>
        <cylinder length="0.8" radius="0.05" />
      </geometry>
      <material name="White"/>
    </visual>
    <collision>
      <origin xyz="0 0 0.4" rpy="0 0 0" />
      <geometry>
        <cylinder length="0.8" radius="0.05" />
      </geometry>
    </collision>
  </link>

  <!-- plate -->
  <!-- <link name="plate_link">
    <visual>
      <origin xyz="0 0 0.6" rpy="0 0 0" />
      <geometry>
        <box size="0.5 0.5 0.02" />
      </geometry>
    </visual>
  </link> -->

  <!-- Fixed joint between cylinder_link and plate_link -->
  <joint name="cylinder_to_plate_joint" type="fixed">
    <origin xyz="0 0 0.2" rpy="0 0 0" />
    <parent link="cylinder_link" />
    <child link="plate_link" />
  </joint>

  <link name="plate_link">
    <visual>
      <origin xyz="0 0 0.6" rpy="0 0 0" />
      <geometry>
        <mesh filename="../meshes/plate.obj" scale="0.05 0.05 0.05" />
      </geometry>
      <material name="White"/>
    </visual>
    <collision>
      <origin xyz="0 0 0.6" rpy="0 0 0" />
      <geometry>
        <mesh filename="../meshes/plate.obj" scale="0.05 0.05 0.05" />
      </geometry>
    </collision>
  </link>

  <!-- castor joint -->
  <joint name="base_caster_support_joint" type="continuous">
    <origin xyz="-0.3292 0 -0.0485" rpy="0 0 0" />
    <parent link="base_link" />
    <child link="base_caster_support_link" />

    <axis xyz="0 0 1" />
    <anchor xyz="0.01 0 0" />
    <limit effort="100" velocity="100" k_velocity="0" />
    <joint_properties damping="0.0" friction="0.0" />
  </joint>

  <link name="base_caster_support_link">
    <inertial>
      <mass value="2" />
      <origin xyz="0 0 0" />
      <inertia ixx="0.00375" ixy="0.0" ixz="0.0"
        iyy="0.00375" iyz="0.0"
        izz="0.00375" />
    </inertial>
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0" />
      <geometry>
        <mesh filename="../meshes/rmp50-castor-link.obj" scale="0.0254 0.0254 0.0254" />
      </geometry>
      <material name="White"/>
    </visual>
    <collision>
      <origin xyz="0 0 0" rpy="0 0 0" />
      <geometry>
        <mesh filename="../meshes/rmp50-castor-link.obj" scale="0.0254 0.0254 0.0254" />
      </geometry>
    </collision>
  </link>

  <!-- caster wheel -->
  <joint name="caster_wheel_joint" type="continuous">
    <origin xyz="-0.0397 0 -0.0918" rpy="0 0 0" />
    <parent link="base_caster_support_link" />
    <child link="caster_wheel_link" />

    <axis xyz="0 1 0" />
    <anchor xyz="0 0 0" />
    <limit effort="100" velocity="100" k_velocity="0" />
    <joint_properties damping="0.0" friction="0.0" />
  </joint>

  <link name="caster_wheel_link">
    <inertial>
      <mass value="4" />
      <origin xyz="0 0 0" rpy="0 0 0" />
      <inertia ixx="0.003" ixy="0.0" ixz="0.0"
        iyy="0.00581" iyz="0.0"
        izz="0.003" />
    </inertial>
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0" />
      <geometry>
        <mesh filename="../meshes/rmp50-castor-wheel.obj" scale="0.0254 0.0254 0.0254" />
      </geometry>
      <material name="White"/>
    </visual>
    <collision>
      <origin xyz="0 0 0" rpy="0 0 0" />
      <geometry>
        <mesh filename="../meshes/rmp50-castor-wheel.obj" scale="0.0254 0.0254 0.0254" />
      </geometry>
    </collision>
  </link>

  <!-- left wheel -->
  <joint name="left_wheel_joint" type="continuous">
    <origin xyz="0 0.2689 0.0239" rpy="0 0 0" />
    <parent link="base_link" />
    <child link="left_wheel_link" />

    <axis xyz="0 1 0" />
    <anchor xyz="0 0 0" />
    <limit effort="100" velocity="100" k_velocity="0" />
    <joint_properties damping="0.0" friction="0.0" />
  </joint>

  <link name="left_wheel_link">
    <inertial>
      <mass value="10" />
      <origin xyz="0 0 0" rpy="0 0 0" />
      <inertia ixx="0.076" ixy="0.0" ixz="0.0"
        iyy="0.144" iyz="0.0"
        izz="0.076" />
    </inertial>
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0" />
      <geometry>
        <mesh filename="../meshes/rmp50-left-wheel.obj" scale="0.0254 0.0254 0.0254" />
      </geometry>
      <material name="White"/>
    </visual>
    <collision>
      <origin xyz="0 0 0" rpy="0 0 0" />
      <geometry>
        <mesh filename="../meshes/rmp50-left-wheel.obj" scale="0.0254 0.0254 0.0254" />
      </geometry>
    </collision>
  </link>

  <!-- right wheel -->
  <joint name="right_wheel_joint" type="continuous">
    <origin xyz="0 -0.2689 0.0239" rpy="0 0 0" />
    <parent link="base_link" />
    <child link="right_wheel_link" />

    <axis xyz="0 1 0" />
    <anchor xyz="0 0 0" />
    <limit effort="100" velocity="100" k_velocity="0" />
    <joint_properties damping="0.0" friction="0.0" />
  </joint>

  <link name="right_wheel_link">
    <inertial>
      <mass value="10" />
      <origin xyz="0 0 0" rpy="0 0 0" />
      <inertia ixx="0.076" ixy="0.0" ixz="0.0"
        iyy="0.144" iyz="0.0"
        izz="0.076" />
    </inertial>
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0" />
      <geometry>
        <mesh filename="../meshes/rmp50-right-wheel.obj" scale="0.0254 0.0254 0.0254" />
      </geometry>
      <material name="White"/>
    </visual>
    <collision>
      <origin xyz="0 0 0" rpy="0 0 0" />
      <geometry>
        <mesh filename="../meshes/rmp50-right-wheel.obj" scale="0.0254 0.0254 0.0254" />
      </geometry>
    </collision>
  </link>

</robot>